                    <TextBlock Text="　　" Height="21" Width="20"/>
                </InlineUIContainer><InlineUIContainer>
                    <Button Content="音声オン/オフ" Command="{Binding }" Background="#FFDDDDDD" Height="45" Width="85"/>
                </InlineUIContainer><InlineUIContainer>
                    <TextBlock Text="　　" Height="17" VerticalAlignment="Bottom" Width="160"/>
                </InlineUIContainer><InlineUIContainer>
                    <Button Content="ログアウト" Command="{Binding LogoffCommand}" Background="#FFDDDDDD" Height="45" Width="85"/>
                </InlineUIContainer></TextBlock>
</UserControl>
